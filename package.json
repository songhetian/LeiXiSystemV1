{
  "name": "customer-service-desktop",
  "version": "1.0.0",
  "description": "客服管理系统 - 桌面版",
  "main": "electron/main.js",
  "author": "Leixi Team",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run dev\"",
    "server": "node server/index.js",
    "dev": "vite",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev:react\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:server": "nodemon server/index.js",
    "dev:react": "vite",
    "dev:electron": "electron .",
    "db:reset": "node scripts/reset-database.js",
    "db:migrate": "node scripts/run-migrations.js",
    "db:clear-history": "node scripts/clear-migration-history.js",
    "db:seed": "node scripts/run-seed.js",
    "db:reset-admin": "node scripts/reset-admin-password.js",
    "db:init-permissions": "node scripts/init-permissions.js",
    "db:add-approval-note": "node scripts/apply-approval-note-migration.js",
    "db:check-quality-rules": "node check-quality-rules.js",
    "db:fix-quality-rules": "node scripts/fix-quality-rules.js",
    "build": "vite build",
    "preview": "vite preview",
    "prod:server": "cross-env NODE_ENV=production node server/index.js",
    "package": "cross-env NODE_ENV=production npm run build && electron-builder",
    "package:win": "cross-env NODE_ENV=production npm run build && electron-builder --win",
    "package:mac": "cross-env NODE_ENV=production npm run build && electron-builder --mac",
    "package:linux": "cross-env NODE_ENV=production npm run build && electron-builder --linux",
    "package:dev": "cross-env NODE_ENV=development npm run build && electron-builder",
    "package:dev:win": "cross-env NODE_ENV=development npm run build && electron-builder --win",
    "package:dev:mac": "cross-env NODE_ENV=development npm run build && electron-builder --mac",
    "package:dev:linux": "cross-env NODE_ENV=development npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/multipart": "^7.7.3",
    "@fastify/rate-limit": "^6.0.0",
    "@fastify/static": "^6.12.0",
    "@heroicons/react": "^2.2.0",
    "antd": "^5.29.0",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "chart.js": "^4.5.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "easymde": "^2.20.0",
    "emoji-mart": "^5.6.0",
    "exceljs": "^4.4.0",
    "fastify": "^4.25.0",
    "jsonwebtoken": "^9.0.2",
    "lodash.debounce": "^4.0.8",
    "lucide-react": "^0.554.0",
    "multer": "^2.0.2",
    "mysql2": "^3.6.5",
    "node-cron": "^4.2.1",
    "pinyin-pro": "^3.27.0",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-simplemde-editor": "^5.2.0",
    "react-toastify": "^9.1.3",
    "recharts": "^3.4.1",
    "remark-gfm": "^4.0.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.leixi.customer-service",
    "productName": "客服管理系统",
    "directories": {
      "output": "dist-app"
    },
    "files": [
      "electron/**/*",
      "server/**/*",
      "dist-react/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/content-management-system_64x64.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icon.png"
    },
    "extraResources": [
      {
        "from": "config/db-config.json",
        "to": "config/db-config.json"
      }
    ],
    "npmRebuild": false
  }
}
